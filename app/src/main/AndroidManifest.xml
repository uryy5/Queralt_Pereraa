<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ivan.reversi_final">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity" android:theme="@style/Theme.AppCompat" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>

        </activity>
        <activity android:name=".activity.GameRuleActivity"></activity>
        <activity android:name=".activity.ConfigureActivity"></activity>
        <activity android:name=".activity.ResultsActivity"></activity>
        <activity android:name=".activity.SettingsFragment"></activity>
        <activity android:name=".activity.HistoryActivity"   android:theme="@style/Theme.AppCompat">

        </activity>

        <activity android:name=".activity.HistoryDetailActivity" android:theme="@style/Theme.AppCompat"> </activity>
        <activity android:name="activity.SettingsActivity" android:theme="@style/Theme.AppCompat" android:label="@string/title_activity_settings" > </activity>


        <activity android:name=".activity.GameScreen">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.ConfigureActivity" />
        </activity>
    </application>
    <!-- Permisos que necesita l'aplicaciÃ³ -->
    <uses-permission android:name="android.permission.VIBRATE" />

</manifest>